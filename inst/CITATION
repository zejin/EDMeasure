citHeader("To cite EDMeasure in publications use:")

citEntry(entry = "Manual",
  title        = "EDMeasure: Energy-based Dependence Measures",
  author       = personList(as.person("Ze Jin"),
                   as.person("Shun Yao"),
                   as.person("David S. Matteson"),
                   as.person("Xiaofeng Shao")),
  year         = "2018",
  note         = "R package version 1.2.",

  textVersion  =
  paste("Ze Jin, Shun Yao, David S. Matteson, and Xiaofeng Shao (2018).",
        "EDMeasure: Energy-based Dependence Measures.",
        "R package version 1.2.")
)